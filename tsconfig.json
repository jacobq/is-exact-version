{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "declaration": true,
    "target": "esnext",
    "module": "es2022",
    "moduleResolution": "nodenext",
    "noEmitOnError": false,
    "noEmit": false,
    "noImplicitAny": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "./node_modules/@types/**/*.d.ts",
    "./types/**/*.d.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "tmp",
    "./tests/**/*.test.ts"
  ]
}
